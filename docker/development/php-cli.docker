FROM php:7.4-cli

RUN apt update && \
	apt install git zip libzip-dev zlib1g-dev libpq-dev -y

RUN docker-php-ext-install bcmath pcntl pdo pdo_pgsql pdo_mysql zip

RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/ --filename=composer --quit

ENV COMPOSER_ALLOW_SUPERUSER 1

WORKDIR /app
